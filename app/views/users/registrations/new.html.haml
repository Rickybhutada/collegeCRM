= javascript_include_tag "user"
%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name),html:{id: "signup_user"}) do |f|
  = devise_error_messages!
  .col-md-6.col-sm-6.col-xs-12
    .item.form-group.item
      %label.control-label.col-md-2.col-sm-2.col-xs-12.label-right{:for => "email"}
        Email
        %span.required *
      .col-md-8.col-sm-8.col-xs-12
        = f.email_field :email, autofocus: true, placeholder: 'Email', :class =>'form-control col-md-7 col-xs-12'
    .item.form-group.item
      %label.control-label.col-md-2.col-sm-2.col-xs-12.label-right{:for => "name"}
        Name
        %span.required *
      .col-md-8.col-sm-8.col-xs-12
        = f.text_field :name, autofocus: true, placeholder: 'name', :class =>'form-control col-md-7 col-xs-12'
    .item.form-group.item
      %label.control-label.col-md-2.col-sm-2.col-xs-12.label-right{:for => "name"}
        Password
        %span.required *
      .col-md-8.col-sm-8.col-xs-12
        = f.password_field :password, autofocus: true, placeholder: 'password', :class =>'form-control col-md-7 col-xs-12'
    .item.form-group.item
      %label.control-label.col-md-2.col-sm-2.col-xs-12.label-right{:for => "name"}
        Password Confirm
        %span.required *
      .col-md-8.col-sm-8.col-xs-12
        = f.password_field :password_confirmation, autofocus: true, placeholder: 'Password Confirmation', :class =>'form-control col-md-7 col-xs-12'
    .item.form-group.item
      %label.control-label.col-md-2.col-sm-2.col-xs-12.label-right{:for => "name"}
        Number
        %span.required *
      .col-md-8.col-sm-8.col-xs-12
        = f.text_field :number, autofocus: true, placeholder: 'number', :class =>'form-control col-md-7 col-xs-12'
    .item.form-group.item
      %label.control-label.col-md-2.col-sm-2.col-xs-12.label-right{:for => "name"}
        Course Type
        %span.required *
      .col-md-8.col-sm-8.col-xs-12
        = f.select :course_type, options_for_select(CourseType.all.map {|c| [c[:name],c[:id]]}),{ :include_blank => 'Select Course Type'}, :class =>'form-control col-md-7 col-xs-12', autofocus: true
    #course_drop_down
  .form-group
    .col-md-6.col-md-offset-5
      = link_to 'Cancel', root_path, class: 'btn btn-default'
      = f.submit 'Create', :class =>'btn btn-primary add-button'

= render "users/shared/links"

