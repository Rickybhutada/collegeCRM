%h1 Course list
= link_to("<< Back", admin_index_path)
|
= link_to('Create Course', new_course_admin_index_path)
%table#course-table.table.table-hover.table.table-striped.table-bordered{:style=>"width:100%"}
  %thead
    %tr
      %th Name
      %th Type
  %tbody
    - @courses.each do |course|
      %tr
        %td
          = link_to(course.name, subject_course_admin_path(course.id))
        %td
          = get_course_type(course.course_type_id)

:javascript
  $('#course-table').DataTable({
    oLanguage: {
      sEmptyTable: 'Course Not Available'
    },
    "bSort": false,
    oSearch: {
      "bSmart": false,
      "bRegex": true
    }
  });

